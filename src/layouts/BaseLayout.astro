---
export interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <!-- Favicon -->
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/assets/images/favicon/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/assets/images/favicon/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/assets/images/favicon/favicon-16x16.png"
        />
        <link rel="manifest" href="/assets/images/favicon/site.webmanifest" />
        <link
            rel="mask-icon"
            href="/assets/images/favicon/safari-pinned-tab.svg"
            color="#5bbad5"
        />
        <link rel="shortcut icon" href="/assets/images/favicon/favicon.ico" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta
            name="msapplication-config"
            content="/assets/images/favicon/browserconfig.xml"
        />
        <meta name="theme-color" content="#ffffff" />
        <meta name="generator" content={Astro.generator} />
        <!-- RSS Feeds -->
        <link rel="alternate" type="application/rss+xml" title="ummshsh - Blog RSS Feed" href="/rss.xml" />
        <link rel="alternate" type="application/rss+xml" title="ummshsh - Microblog RSS Feed" href="/microblog/rss.xml" />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <div class="header-container">
                <div class="header-content">
                    <a href="/" class="logo">
                        <img
                            src="/assets/images/logo/loves vector.svg"
                            alt="Logo"
                        />
                    </a>
                    <nav class="nav">
                        <a
                            href="/"
                            class={Astro.url.pathname === "/" ? "active" : ""}
                        >
                            home
                        </a>
                        <a
                            href="/microblog"
                            class={Astro.url.pathname === "/microblog"
                                ? "active"
                                : ""}
                        >
                            microblog
                        </a>
                        <a
                            href="/about"
                            class={Astro.url.pathname === "/about"
                                ? "active"
                                : ""}
                        >
                            about
                        </a>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div class="container">
                <slot />
            </div>
        </main>
        <script is:inline>
            // Hover footnotes positioning
            document.addEventListener("DOMContentLoaded", function () {
                // Clickable images
                document.querySelectorAll(".clickableimg").forEach((img) => {
                    img.addEventListener("click", function () {
                        window.location.href = this.src;
                    });
                });

                // Snow effect function
                function createSnowflakes() {
                    // Remove existing snow container if it exists
                    const existing = document.querySelector(".snow-container");
                    if (existing) {
                        existing.remove();
                    }

                    const snowContainer = document.createElement("div");
                    snowContainer.style.position = "fixed";
                    snowContainer.style.top = "0";
                    snowContainer.style.left = "0";
                    snowContainer.style.width = "100vw";
                    snowContainer.style.height = "100vh";
                    snowContainer.style.pointerEvents = "none";
                    snowContainer.style.zIndex = "-1";
                    snowContainer.classList.add("snow-container");

                    document.body.appendChild(snowContainer);

                    const totalSnowflakes = 200;

                    for (let i = 0; i < totalSnowflakes; i++) {
                        const snowflake = document.createElement("div");
                        snowflake.classList.add("snow");

                        // Random positioning and animation
                        const randomX = Math.random() * 100;
                        const randomDelay = Math.random() * -30;
                        const randomDuration = Math.random() * 20 + 10;
                        const randomOpacity = Math.random() * 0.8 + 0.2;
                        const randomSize = Math.random() * 8 + 2;
                        const randomEndX = randomX + (Math.random() - 0.5) * 40;

                        snowflake.style.left = randomX + "%";
                        snowflake.style.opacity = randomOpacity.toString();
                        snowflake.style.width = randomSize + "px";
                        snowflake.style.height = randomSize + "px";
                        snowflake.style.animationDelay = randomDelay + "s";
                        snowflake.style.animationDuration =
                            randomDuration + "s";

                        // Create unique animation for each snowflake
                        const keyframeName = `snowfall-${i}`;
                        const keyframes = `
                    @keyframes ${keyframeName} {
                      to {
                        transform: translate(${randomEndX - randomX}vw, 100vh) scale(${Math.random() * 0.5 + 0.5});
                      }
                    }
                  `;

                        // Inject the keyframe
                        const style = document.createElement("style");
                        style.textContent = keyframes;
                        document.head.appendChild(style);

                        snowflake.style.animation = `${keyframeName} ${randomDuration}s linear infinite ${randomDelay}s`;

                        snowContainer.appendChild(snowflake);
                    }
                }

                // Enable/disable snow by commenting/uncommenting the line below:
                createSnowflakes();
            });
        </script>
    </body>
</html>
